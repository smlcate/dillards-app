extends layout

block content

  main
        
    form(action="signin" method="POST" class="userForm")
      input(type="text" name="emailInput" placeholder="Email")
      input(type="password" name="passwordInput" placeholder="Password")

      input(type="submit" class="submitUserInput" name="submitUserInput" value="Sign-In" )
      
      
      h4 #{ error }
      
    a(href="/signup") Sign-up
