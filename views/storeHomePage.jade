extends layout

block content
  
  main
    
    
    div.storeInfo
    
      img(src="/images/dillard_store.jpg")
      div.container
        h3= storeData.city + ", " + storeData.state
        p= storeData.address
        //- h4= storeData.rating

    nav.departmentNav
    
      each department, index in departments
      
        div
      
          a(href="/store/:#{storeData.id}/department/:#{department}")= department

    div.commentContainer
      
      div(ng-controller="updateCommentsController").commentHeader
        form(action="/newComment/:#{storeData.id}", method="POST")
          
          input(type="text", name="comment", placeholder="Comment")
          input(type="submit")
          
      table.table.table-stripped
        tbody  
        
          each comment, key in comments
        
            div(id="commentInfo")
              
              //- img(src="/images/employee_image_placeholder.png")

              div#commentResult
                //- form(action="/editBook", method="post", id="newBookForm", class="libraryInfo")
                h5= comments[key].owner
                h6= comments[key].post_date
              
                p= comments[key].comment
          
        
        
    script(type="text/javascript", src="routes/index.js") 
